<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Debug and Test Panel"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_test_api_keys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test API Keys"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_test_news_api"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test News API"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_test_gemini_api"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Gemini API"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_test_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Navigation"
            android:layout_marginBottom="16dp" />        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tips:\n• Long press buttons in other screens for help\n• Check these tests if features aren\'t working\n• Make sure API keys are set in local.properties"
            android:textSize="14sp"
            android:background="?attr/colorSurfaceVariant"
            android:padding="12dp" />

    </LinearLayout>

</ScrollView>
